                //                         0,
                //                         () => {
                //                             if (err) {
                //                                 console.log(err)
                //                                 throw err;
                //                             }
                //                         })
                //
                //                 } else {
                //                     fs.rename(
                //                         path.join(__dirname, 'lesson1_cw', 'task', `New_${file.name}`, `${newFile.name}`),
                //                         path.join(__dirname, 'lesson1_cw', 'task', `New_${file.name}`, `New_${newFile.name}`),
                //                         (err) => {
